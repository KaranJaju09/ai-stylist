{
  "version": 2,
  "name": "ai-stylist",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "AI_SERVICE_URL": "https://your-ai-service-deployment.herokuapp.com"
  },
  "functions": {
    "backend/index.js": {
      "maxDuration": 30
    }
  }
}
